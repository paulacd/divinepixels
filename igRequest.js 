//------------------------------IG SCRAPPING------------------------------------------//

function callMethod(successCallback, Iurl) {

    // console.log(url)

    $.ajax({
        url: Iurl, // this should look like url: 'yourroute/goes here'
        type: 'GET',
        success: successCallback,
        error: function(xhr, textStatus, errorThrown) {
            console.dir(xhr);
            console.dir(textStatus);
            console.dir(errorThrown);
            //console.log(errorThrown);
            //evokeEmergencySolution();
        }

    });
    //alert("hey");

}

